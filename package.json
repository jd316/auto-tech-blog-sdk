{
  "name": "auto-tech-blog-sdk",
  "version": "1.0.0",
  "description": "CLI + SDK to generate a tech/AI blog post each day with Gemini, compress hero image and scaffold Next.js static files.",
  "type": "module",
  "bin": {
    "auto-tech-blog-sdk": "cli.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": "./index.js"
  },
  "types": "index.d.ts",
  "files": [
    "src/",
    "index.js",
    "index.d.ts",
    "cli.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    ".env.example"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "build": "echo 'No build step needed for pure ESM package'",
    "prepublishOnly": "npm run test"
  },
  "keywords": [
    "gemini",
    "blog",
    "automation",
    "ai",
    "nextjs",
    "cli",
    "sdk",
    "content-generation",
    "tech-blog",
    "rss",
    "sitemap"
  ],
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.6.0",
    "@mozilla/readability": "^0.6.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "feed": "^4.2.2",
    "jsdom": "^24.0.0",
    "marked": "^11.1.1",
    "rss-parser": "^3.12.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^30.0.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jd316/auto-tech-blog-sdk.git"
  },
  "author": "jd316 <jd316biswas@gmail.com>",
  "bugs": {
    "url": "https://github.com/jd316/auto-tech-blog-sdk/issues"
  },
  "homepage": "https://github.com/jd316/auto-tech-blog-sdk#readme"
}
